{
  "version": 2,
  "name": "mysticfunds-frontend",
  "builds": [
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/web/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/index.html"
    }
  ],
  "functions": {},
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://mysticfunds-backend-production.up.railway.app/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}